  /pop-ups/{id}/close:
    post:
      summary: Закрытие попапа
      description: Закрывает попап с заданным ID.
      parameters:
        - name: id
          in: path
          required: true
          description: Уникальный идентификатор попапа
          schema:
            type: string
            example: "126"
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                pop_ups_name:
                  type: string
                  description: Имя попапа
                timestamp:
                  type: string
                  format: date-time
                  description: Временная метка
              required:
                - pop_ups_name
                - timestamp   
            example: 
                pop_ups_name: "proposed-task"
                timestamp: "2025-02-25T12:34:56Z"   
            
                
      responses:
        '200':
          description: Успешное закрытие попапа
          content:
            application/json:
              schema:
                type: object
                properties:
                  success:
                    type: boolean
                    example: true
        '404':
          description: Попап не найден
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'
              example:
                error:
                  code: 404
                  message: "Pop-up not found"
                  details: "Pop-up with ID '126' not found"
                  requestId: "abc123def"
                  timestamp: "2025-02-25T12:34:56Z"
        '500':
          description: Внутренняя ошибка сервера
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'
              example:
                error:
                  code: 500
                  message: "Internal server error"
                  details: "Unexpected condition occurred"
                  requestId: "abc123def"
                  timestamp: "2025-02-25T12:34:56Z"

  /pop-ups/{id}/view:
    post:
      summary: Просмотр попапа
      description: Помечает попап как просмотренный.
      parameters:
        - name: id
          in: path
          required: true
          description: Уникальный идентификатор попапа
          schema:
            type: string
            example: "126"
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                pop_ups_name:
                  type: string
                  description: Имя попапа
                timestamp:
                  type: string
                  format: date-time
                  description: Временная метка
              required:
                - pop_ups_name
                - timestamp   
            example: 
                pop_ups_name: "proposed-task"
                timestamp: "2025-02-25T12:34:56Z"  
      responses:
        '200':
          description: Успешное обновление статуса попапа
          content:
            application/json:
              schema:
                type: object
                properties:
                  success:
                    type: boolean
                    example: true
        '404':
          description: Попап не найден
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'
              example:
                error:
                  code: 404
                  message: "Pop-up not found"
                  details: "Pop-up with ID '126' not found"
                  requestId: "abc123def"
                  timestamp: "2025-02-25T12:34:56Z"
        '500':
          description: Внутренняя ошибка сервера
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'
              example:
                error:
                  code: 500
                  message: "Internal server error"
                  details: "Unexpected condition occurred"
                  requestId: "abc123def"
                  timestamp: "2025-02-25T12:34:56Z"

components:
  securitySchemes:  
    cookieAuth:    
      type: apiKey
      in: cookie
      name: session_token
      description: Аутентификация через токен в cookies
  schemas:        
    PopUp:        
      type: object
      required:
        - id
        - pop_ups_name
        - plain_text
        - clickableArea
        - link
        - title
        - message
      properties:
        id:
          type: integer
          example: 126
        pop_ups_name:
          type: string
          example: "proposed-task"
        plain_text:
          type: string
          example: "Вам предложили задание «Привезти мягкую игрушку»\nОткликнитесь на предложенное задание"
        icon:
          type: string
          example: "https://avatar.youdo.com/get.userAvatar?AvatarId=0&AvatarType=H60W60"
        clickableArea:
          type: string
          example: "pop-up"
        button_name:
          type: string
          example: "Подписаться"
        link:
          type: string
          example: "https://youdo.com/t13619539"
        title:
          type: array
          description: Заголовок попапа с возможностью стилизации текста.
          items:
            type: object
            properties:
              text:
                type: string
                example: "Вам предложили задание «Привезти мягкую игрушку»"
              styles:
                type: array
                items:
                  type: object
                  properties:
                    type:
                      type: string
                      example: "bold"
                    offset:
                      type: integer
                      example: 0
                    length:
                      type: integer
                      example: 22
        message:
          type: array
          description: Текст попапа с возможностью стилизации текста.
          items:
            type: object
            properties:
              text:
                type: string
                example: "Откликнитесь на предложенное задание"
              styles:
                type: array
                items:
                  type: object
                  properties:
                    type:
                      type: string
                      example: "italic"
                    offset:
                      type: integer
                      example: 0
                    length:
                      type: integer
                      example: 29

    ErrorResponse:
      type: object
      required:
        - error
      properties:
        error:
          type: object
          properties:
            code:
              type: integer
              example: 400
            message:
              type: string
              example: "Invalid request"
            details:
              type: string
              example: "Field 'email' is required"
            requestId:
              type: string
              example: "xyz456pqr"
            timestamp:
              type: string
              format: date-time
              example: "2025-02-25T12:34:56Z"
