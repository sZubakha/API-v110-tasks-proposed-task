openapi: 3.0.3
info:
  title: Pop-up API
  version: 1.0.0
  description: API для получения попапов в зависимости от состояния пользователя и страницы источника запроса.

servers:
  - url: https://youdo.ru
    description: Основной сервер API

security:
  - cookieAuth: []

paths:
  /pop-ups:
    get:
      summary: Получение списка попапов
      description: Возвращает список попапов, отображаемых пользователю.
      parameters:
        - name: X-Source-Page
          in: header
          required: false
          description: URL страницы, с которой пришёл пользователь (влияет на логику показа pop-up окон)
          schema:
            type: string
            example: /profile
      responses:
        '200':
          description: Успешный ответ со списком попапов.
          content:
            application/json:
              schema:
                type: object
                properties:
                  pop_ups:
                    type: array
                    items:
                      $ref: '#/components/schemas/PopUp'
              example:
                pop_ups:
                  - id: 126
                    pop_ups_name: proposed-task
                    plain_text: "Вам предложили задание «Привезти мягкую игрушку»\nОткликнитесь на предложенное задание"
                    icon: "https://avatar.youdo.com/get.userAvatar?AvatarId=0&AvatarType=H60W60"
                    clickableArea: pop-up
                    link: "https://youdo.com/t13619539"
                    title:
                      - text: "Вам предложили задание «Привезти мягкую игрушку»"
                        styles:
                          - type: bold
                            offset: 0
                            length: 22
                          - type: color
                            value: "#42aaff"
                            offset: 23
                            length: 48
                    message:
                      - text: "Откликнитесь на предложенное задание"
                        styles:
                          - type: italic
                            offset: 0
                            length: 29
        '400':
          description: Неверный запрос
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'
              example:
                error:
                  code: 400
                  message: "Invalid request"
                  details: "Field 'email' is required"
                  requestId: "xyz456pqr"
                  timestamp: "2025-02-25T12:34:56Z"
        '500':
          description: Внутренняя ошибка сервера
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'
              example:
                error:
                  code: 500
                  message: "Internal server error"
                  details: "Unexpected condition occurred"
                  requestId: "abc123def"
                  timestamp: "2025-02-25T12:34:56Z"

  /pop-ups/proposed-task:
    get:
      summary: Получение попапа для предложенного задания
      description: Возвращает попап с предложением выполнить задание.
      responses:
        '200':
          description: Успешный ответ с попапом для предложенного задания.
          content:
            application/json:
              schema:
                type: object
                properties:
                  pop_ups:
                    type: array
                    items:
                      $ref: '#/components/schemas/PopUp'
              example:
                pop_ups:
                  - id: 127
                    pop_ups_name: proposed-task
                    plain_text: "Вам предложили задание «Привезти мягкую игрушку»\nОткликнитесь на предложенное задание"
                    icon: "https://avatar.youdo.com/get.userAvatar?AvatarId=1&AvatarType=H60W60"
                    clickableArea: pop-up
                    link: "https://youdo.com/t13619540"
                    title:
                      - text: "Вам предложили задание «Привезти мягкую игрушку»"
                        styles:
                          - type: bold
                            offset: 0
                            length: 22
                          - type: color
                            value: "#42aaff"
                            offset: 23
                            length: 48
                    message:
                      - text: "Откликнитесь на предложенное задание"
                        styles:
                          - type: italic
                            offset: 0
                            length: 29
        '400':
          description: Неверный запрос
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'
              example:
                error:
                  code: 400
                  message: "Invalid request"
                  details: "Field 'task_id' is required"
                  requestId: "xyz456pqr"
                  timestamp: "2025-02-25T12:34:56Z"
        '500':
          description: Внутренняя ошибка сервера
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'
              example:
                error:
                  code: 500
                  message: "Internal server error"
                  details: "Unexpected condition occurred"
                  requestId: "abc123def"
                  timestamp: "2025-02-25T12:34:56Z"

  /pop-ups/subscribe:
    get:
      summary: Получение попапа для подписки
      description: Возвращает попап с предложением подписаться на новостную рассылку.
      responses:
        '200':
          description: Успешный ответ с попапом для подписки.
          content:
            application/json:
              schema:
                type: object
                properties:
                  pop_ups:
                    type: array
                    items:
                      $ref: '#/components/schemas/PopUp'
              example:
                pop_ups:
                  - id: 128
                    pop_ups_name: subscribe
                    plain_text: "Подпишитесь на нашу новостную рассылку, чтобы не пропустить важные обновления!"
                    icon: "https://avatar.youdo.com/get.userAvatar?AvatarId=2&AvatarType=H60W60"
                    clickableArea: button
                    button_name: "Подписаться"
                    link: "https://youdo.com/subscribe"
                    title:
                      - text: "Подписка"
                        styles:
                          - type: bold
                            offset: 0
                            length: 22
                          - type: color
                            value: "#4caf50"
                            offset: 0
                            length: 22
                    message:
                      - text: "Подпишитесь на нашу новостную рассылку"
                        styles:
                          - type: italic
                            offset: 0
                            length: 36
        '400':
          description: Неверный запрос
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'
              example:
